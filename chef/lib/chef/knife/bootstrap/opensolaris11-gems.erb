bash -x -c '
if [ ! -f /var/ruby/1.8/gem_home/bin/chef-client ]; then
  cd /tmp
  wget http://production.cf.rubygems.org/rubygems/rubygems-1.3.7.tgz
  gzip -dc rubygems-1.3.7.tgz | tar -xf -
  cd rubygems-1.3.7
  ruby setup.rb --no-format-executable
  if [ ! -f /usr/sfw/bin/gcc ]; then
    wget http://pkg.opensolaris.org/release/p5i/0/SUNWgcc.p5i
    pkg install SUNWgcc
  fi
  gem install ohai chef --no-rdoc --no-ri --verbose <%= '--prerelease' if @config[:prerelease] %>
  # replace json with json_pure per http://gregalbrecht.com/2010/09/09/chef-solaris/
  gem uninstall json -I -x -a
  gem install json_pure --version 1.4.4
  cat /var/ruby/1.8/gem_home/specifications/json_pure-1.4.4.gemspec | sed s/json_pure/json/g > /var/ruby/1.8/gem_home/specifications/json-1.4.4.gemspec
  cp -pr /var/ruby/1.8/gem_home/gems/json_pure-1.4.4 /var/ruby/1.8/gem_home/gems/json-1.4.4
fi

mkdir -p /etc/chef

(
cat <<'EOP'
<%= IO.read(Chef::Config[:validation_key]) %>
EOP
) > /tmp/validation.pem
cat /tmp/validation.pem | awk '/./' > /etc/chef/validation.pem
rm /tmp/validation.pem

(
cat <<'EOP'
# generated by opensolaris11-gems.erb bootstrap
log_level        :info
log_location     STDOUT
chef_server_url  "<%= Chef::Config[:chef_server_url] %>"
validation_client_name "<%= Chef::Config[:validation_client_name] %>"
<% if @config[:chef_node_name] == nil %>
# Using default node name
<% else %>
node_name "<%= @config[:chef_node_name] %>"
<% end %>
<% if Chef::Config[:environment] != nil %>
environment "<%= Chef::Config[:environment]%>"
<% end %>
EOP
) > /etc/chef/client.rb

(
cat <<'EOP'
<%= { "run_list" => @run_list }.to_json %>
EOP
) > /etc/chef/first-boot.json

/var/ruby/1.8/gem_home/bin/chef-client -j /etc/chef/first-boot.json'
